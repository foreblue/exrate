{
  "manifest_version": 3,
  "name": "네이버 환율 조회",
  "version": "1.0",
  "description": "네이버 금융에서 실시간 환율 정보를 조회하는 크롬 익스텐션",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://finance.naver.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 